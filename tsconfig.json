{
  "compilerOptions": {
    "noImplicitAny": false,//不需要显示的声明变量的any类型
    "target": "es5",//编译后版本
    "lib": [
      "dom",//documnent.getElementById('root')
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,// 允许混合编译js文件
    "skipLibCheck": true,
    "esModuleInterop": true,//是否允许使用commom.js的import 方式引入
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",//编译器的工作方式
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" //允许编译器支持react代码
  },
  "include": [
    "src"
  ]
}
